extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8(ng-controller="locationListCtrl")
      .error {{ message }}
      .row.list-group
          .col-xs-12.list-group-item(ng-repeat="asdf in data.locations")
            h4 
              a(href="/location/{{ asdf._id }} ") {{ asdf.name }}
              small {{ asdf.rating }}
              span.badge.pull-right.badge-default {{ asdf.distace }}
            p.address {{ asdf.address }}
            p
              span.label.label-warning(ng-repeat=asdf2 in asdf.facilities)
                | {{ asdf2 }}
    .col-xs-12.col-sm-4 
      p.lead= sidebar