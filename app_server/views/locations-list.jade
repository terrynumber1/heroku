mixin welcome
    p welcome

extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
      .row
          .col-lg-6
              h1= pageHeader.title
                small &nbsp;#{pageHeader.strapline}

  .row
      .col-xs-12.col-sm-8
          .row.list-group
            each asdf in locations
              .col-xs-12.list-group-item
                  h4
                    a(href="/location")= asdf.name
                        | &nbsp;
                        +outputRating(asdf.rating)
                    span.badge.pull-right.badge-default= asdf.distance
                  p.address= asdf.address
                  p
                    each fac in asdf.facilities
                        span.label.label-warning= fac
                        | &nbsp;
      .col-xs-12.col-sm-4
        p.lead= sidebar

